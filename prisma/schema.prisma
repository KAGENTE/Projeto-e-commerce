datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("customer")
  createdAt DateTime @default(now())
  orders    Order[]
  reviews   Review[] 
}


model Product {
  id          Int      @id @default(autoincrement())
  imgUrl      String
  name        String
  description String?
  price       Float
  sku         String   @unique
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  reviews     Review[] 
}


model Order {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  data      DateTime @default(now())
  itens     Json
  total     Float
}

model Review {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  rating    Int      @default(0)
  comment   String 
  createdAt DateTime @default(now())
}

